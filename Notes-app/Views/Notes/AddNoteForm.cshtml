@model Notes

<form asp-controller= "Notes" asp-action="AddNote" method="post">
<title>New Note</title>
<div class="input-group mb-3">
<span class="input-group-text">Note name</span>
<input type="text" class="form-control" asp-for=Title required/>
</div>
<textarea id="editor" asp-for=Content></textarea>
<input type="submit" value="Save" class="btn btn-primary saveButton" />
<a asp-action="Index" class="btn btn-dark saveButton">Cancel</a>
</form>


<script src="https://cdn.ckeditor.com/ckeditor5/34.0.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create( document.querySelector( '#editor' ) )
        .catch( error => {
            console.error( error );
        } );
</script>